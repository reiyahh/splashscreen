<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:src="@drawable/lifeprof"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="16dp"/>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_account_circle_24"
        android:contentDescription="Profile Image"
        android:clickable="true"
        android:focusable="true"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/userEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logged in as: user@example.com"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintTop_toBottomOf="@id/userEmailText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>


    <TextView
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="startSETTINGS"
        android:text="Settings"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/setting_icon"
        app:layout_constraintTop_toTopOf="@id/setting_icon"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/policy_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_privacy_tip_24"
        app:layout_constraintTop_toBottomOf="@id/setting_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Privacy Policy"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/policy_btn"
        app:layout_constraintTop_toTopOf="@id/policy_btn" />

    <ImageView
        android:id="@+id/help_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_question_mark_24"
        app:layout_constraintTop_toBottomOf="@id/policy_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Help"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/help_icon"
        app:layout_constraintTop_toTopOf="@id/help_icon" />

    <ImageView
        android:id="@+id/logout_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_logout_24"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/help_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Logout"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/logout_btn"
        app:layout_constraintTop_toTopOf="@id/logout_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>
