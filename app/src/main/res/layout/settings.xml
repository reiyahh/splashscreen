<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Settings"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#B00020"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Notifications -->

    <Switch
        android:id="@+id/switch_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumbTint="#B00020"
        android:trackTint="#FFCDD2"
        app:layout_constraintTop_toTopOf="@id/label_notifications"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dark Mode -->
    <TextView
        android:id="@+id/label_dark_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dark Mode"
        android:textSize="18sp"
        android:textColor="#444"
        app:layout_constraintTop_toBottomOf="@id/label_notifications"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/switch_dark_mode"
        android:layout_marginEnd="8dp" />

    <Switch
        android:id="@+id/switch_dark_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumbTint="#B00020"
        android:trackTint="#FFCDD2"
        app:layout_constraintTop_toTopOf="@id/label_dark_mode"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Language -->
    <TextView
        android:id="@+id/label_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textSize="18sp"
        android:textColor="#444"
        app:layout_constraintTop_toBottomOf="@id/label_dark_mode"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/language_dropdown"
        android:layout_marginEnd="8dp" />

    <Spinner
        android:id="@+id/language_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/language_options"
        android:popupBackground="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/label_language"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Change Password -->
    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textColor="@android:color/white"
        android:backgroundTint="#B00020"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/label_language"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/btn_contact_support"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FFEBEE"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Contact Support"
        android:textColor="#B00020"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_delete_account" />

    <TextView
        android:id="@+id/label_notifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:text="Enable Notifications"
        android:textColor="#444"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/switch_notifications"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_settings" />

    <Button
        android:id="@+id/btn_delete_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#D32F2F"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Delete Account"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_change_password" />

    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        android:textColor="#888"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
