<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".privacy"
    android:padding="16dp">


    <ImageView
        android:id="@+id/policy"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:contentDescription="Policy Icon"
        android:src="@drawable/lifeprof"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy and Policy"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/policy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/textView18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confidentiality of Donor Information: Donor personal and medical information is kept confidential. Secure Storage of Donor Records: Donor records are stored securely to prevent unauthorized access. Limited Access to Donor Information: Only authorized personnel have access to donor information."
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/textView17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />


    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and Condition"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textView18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />


    <TextView
        android:id="@+id/textView19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Informed Consent: Donors must provide informed consent before donating blood. Donor Screening: Donors are screened for eligibility to donate blood. Blood Testing: Donated blood is tested for infectious diseases. Donor Confidentiality: Donor identity is kept confidential."
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/terms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Donors must be at least 17 years old (or 16 years old with parental consent) to ensure physical and emotional maturity for the donation process. Weight Requirement: Donors must weigh at least 110 pounds to ensure sufficient blood volume for donation and minimize potential health risks. Health Status: Donors must be in good health, free from certain medical conditions, such as heart disease, cancer, or infectious diseases, to ensure the safety of the donated blood. Medical History Disclosure: Donors must disclose their medical history, including certain medications, vaccinations, and travel history, to assess potential risks and ensure the safety of the donated blood."
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/textView19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
